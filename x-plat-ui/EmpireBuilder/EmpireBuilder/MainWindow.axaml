<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="EmpireBuilder.MainWindow"
        Title="Empire Builder"
		ShowInTaskbar="True"
		WindowStartupLocation="CenterScreen"
		MinWidth="640" MinHeight="480"
		Width="640" Height="480">
    <StackPanel Background="gray">
		<StackPanel Margin="5">
			<TextBox Name="RailroadQuery" 
			         AcceptsReturn="True" 
			         TextWrapping="Wrap" 
			         Text="Query to execute." 
			         Width="620"
			         Margin="5" VerticalAlignment="Top" HorizontalAlignment="Left"/>
			<Button Name="TheButton"
			        Margin="5"
			        VerticalAlignment="Top"
			        HorizontalAlignment="Left"
			        Click="Button_Click" Width="160" Height="30" >My Button</Button>			
		</StackPanel>
	    <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Stretch" Background="AliceBlue">
		    <TextBlock Name="RailroadResponse" 
		               TextAlignment="Left" 
		               TextWrapping="Wrap" 
		               HorizontalAlignment="Stretch"></TextBlock>
	    </StackPanel>   
    </StackPanel>
</Window>


